{
  "name": "play-history-service",
  "type": "module",
  "description": "Simplified Play History Service for a streaming platform",
  "main": "index.js",
  "scripts": {
    "dev": "ts-node src/server.ts",
    "test": "jest",
    "build": "tsc",
    "start": "node dist/index.js",
    "lint": "eslint src/**/*.ts test/**/*.ts",
    "lint:fix": "eslint src/**/*.ts test/**/*.ts --fix",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "prepare": "husky"
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ],
    "test/**/*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@types/express": "5.0.3",
    "@types/jest": "30.0.0",
    "@types/node": "24.7.0",
    "@types/supertest": "6.0.3",
    "@typescript-eslint/eslint-plugin": "8.45.0",
    "@typescript-eslint/parser": "8.45.0",
    "eslint": "9.37.0",
    "express": "5.1.0",
    "husky": "9.1.7",
    "jest": "30.2.0",
    "lint-staged": "16.2.3",
    "prettier": "3.6.2",
    "supertest": "7.1.4",
    "ts-jest": "29.4.4",
    "ts-node": "10.9.2",
    "typescript": "5.9.3"
  }
}